{
    "compilerOptions": {
        "target": "esnext",
        "strictNullChecks": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "lib": ["es2019", "dom"],
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "./src/typings"],
        "baseUrl": ".",
        "paths": {
            "@api/*": ["src/api/*"],
            "@app/*": ["src/app/*"],
            "@hooks/*": ["src/hooks/*"],
            "@i18/*": ["src/i18/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@lib/*": ["src/lib/*"],
            "@services/*": ["src/services/*"],
            "@typings/*": ["src/typings/*"],
            "@src/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
