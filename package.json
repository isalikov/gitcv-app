{
    "name": "@isalikov/gitcv-app",
    "version": "1.2.0",
    "description": "gitcv.io App",
    "license": "UNLICENSED",
    "author": {
        "name": "Iakov Salikov",
        "email": "salikovpro@gmail.com"
    },
    "scripts": {
        "dist": "webpack -c .webpack/webpack.config",
        "dev": "webpack serve -c .webpack/webpack.config",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "eslintIgnore": [
        "dist",
        "node_modules",
        "src/assets"
    ],
    "eslintConfig": {
        "plugins": [
            "prettier"
        ],
        "extends": [
            "airbnb",
            "airbnb-typescript",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "rules": {
            "import/prefer-default-export": [
                "off"
            ],
            "import/extensions": [
                "off"
            ],
            "import/order": [
                "error",
                {
                    "groups": [
                        "external",
                        [
                            "builtin",
                            "internal",
                            "unknown",
                            "parent",
                            "sibling",
                            "index",
                            "object",
                            "type"
                        ]
                    ],
                    "pathGroupsExcludedImportTypes": [],
                    "pathGroups": [
                        {
                            "pattern": "react",
                            "group": "external",
                            "position": "before"
                        },
                        {
                            "pattern": "@gitcv/**",
                            "group": "external",
                            "position": "after"
                        },
                        {
                            "pattern": "@app/**",
                            "group": "external",
                            "position": "after"
                        },
                        {
                            "pattern": "@lib/**",
                            "group": "external",
                            "position": "after"
                        }
                    ],
                    "alphabetize": {
                        "order": "asc"
                    },
                    "newlines-between": "always-and-inside-groups"
                }
            ],
            "react/require-default-props": [
                "off"
            ],
            "react/react-in-jsx-scope": [
                "off"
            ],
            "react/prop-types": [
                "off"
            ],
            "react/function-component-definition": [
                "off"
            ],
            "@typescript-eslint/naming-convention": [
                "off"
            ]
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 80
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env"
            ],
            [
                "@babel/preset-react",
                {
                    "runtime": "automatic"
                }
            ],
            [
                "@babel/preset-typescript"
            ]
        ]
    },
    "dependencies": {
        "@babel/core": "^7.22.1",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.22.4",
        "@babel/preset-react": "^7.22.3",
        "@babel/preset-typescript": "^7.21.5",
        "@isalikov/gitcv-api": "^1.0.0",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
        "@types/react": "^18.2.7",
        "@types/react-dom": "^18.2.4",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@uiw/react-md-editor": "^3.23.3",
        "@webpack-cli/serve": "^2.0.4",
        "axios": "^1.4.0",
        "babel-loader": "^9.1.2",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.1",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.41.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "html-webpack-plugin": "^5.5.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "prettier": "2.8.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-intl": "^6.4.2",
        "react-refresh": "^0.14.0",
        "react-router-dom": "^6.11.2",
        "style-loader": "^3.3.3",
        "styled-components": "^5.3.11",
        "terser-webpack-plugin": "^5.3.9",
        "typescript": "4.8.4",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1",
        "webpack-dev-server": "^4.15.0",
        "webpack-merge": "^5.9.0"
    }
}
